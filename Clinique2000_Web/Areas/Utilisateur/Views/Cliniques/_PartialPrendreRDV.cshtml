@model IEnumerable<Clinique2000_Models.Models.PlageHoraire>

@{
    ViewData["Title"] = "Index";
}

<div style="border-top: 1px solid #ddd; border-bottom: 1px solid #ddd; background-color: #f2f2f2; padding: 20px;">

    <div class="d-flex justify-content-center">
        <h3>Sélectionner l'heure du rendez-vous</h3>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <button class="btn btn-warning text-dark m-2 col-1" style="height: 50px; margin: 10px;" onclick="location.href='@Url.Action("UpdateReserveStatus", new { id = item.Id })'">
                <div class="text-center">
                    <strong>@item.Debut.ToString("hh\\:mm")</strong>
                </div>
            </button>
        }
    </div>

</div>









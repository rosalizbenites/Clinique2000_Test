@page
@model RegisterModel
@{
    ViewData["Title"] = "Inscription";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-7">
        <form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Créer un compte</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group py-2 col-6">
                <label asp-for="Input.Email">Courriel <span class="red-asterisk">*</span></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="johndoe@clinique2000.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group py-2 col-6">
                <label asp-for="Input.Telephone">Téléphone <span class="red-asterisk">*</span></label>
                <input id="phoneNumberInput" type="tel" maxlength="16" asp-for="Input.Telephone" class="form-control" placeholder="(123) 123-1234" />
                <span asp-validation-for="Input.Telephone" class="text-danger"></span>
            </div>
            <div class="form-group py-2 col-6">
                    <label asp-for="Input.Prenom">Prénom <span class="red-asterisk">*</span></label>
                    <input asp-for="Input.Prenom" class="form-control" aria-required="true" />                    
                    <span asp-validation-for="Input.Prenom" class="text-danger"></span>
            </div>
            <div class="form-group py-2 col-6">
                <label asp-for="Input.Nom">Nom <span class="red-asterisk">*</span></label>
                <input asp-for="Input.Nom" class="form-control" aria-required="true" />                    
                <span asp-validation-for="Input.Nom" class="text-danger"></span>
            </div>
            <div class="form-group py-2 col-6">
            <label asp-for="Input.Password">Mot de passe <span class="red-asterisk">*</span></label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />                    
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group py-2 col-6">
            <label asp-for="Input.ConfirmPassword">Confirmez le mot de passe <span class="red-asterisk">*</span></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />                    
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
           <div>
                <button id="registerSubmit" type="submit" class="mt-3 mb-4 w-50 btn btn-outline-primary">S'inscrire</button>
           </div>
        </form>
        <div>
            <p>
                <a class="text-decoration-none" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Se connecter en tant qu'utilisateur</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Attach the phone number formatting function to the input field
            $('#phoneNumberInput').on('input', function () {
                formatPhoneNumber(this);
            });

            // Function to format the phone number
            function formatPhoneNumber(input) {
                var phoneNumber = input.value.replace(/\D/g, ''); // Remove non-numeric characters
                var formattedNumber = '(' + phoneNumber.substring(0, 3) + ') ' + phoneNumber.substring(3, 6) + '-' + phoneNumber.substring(6, 10);
                input.value = formattedNumber;
            }
        });
    </script>

}
